<p id="notice"><%= notice %></p>

<h1>Listing Devices</h1>

<table>
  <thead>
  <tr>
    <th>serial_number</th>
    <th>sim_number</th>
  </tr>
  </thead>

  <tbody>
  <% @devices.each do |device| %>
      <tr>
        <td><%= device.serial_number %></td>
        <td><%= device.sim_number %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Map', map_position_systems_devices_path(id: device.id) %></td>
      </tr>
  <% end %>
  </tbody>
</table>
